{
  "extends": "expo/tsconfig.base",
  "resolveJsonModule": true,
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "types": ["react-native", "jest", "i18next"],
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
